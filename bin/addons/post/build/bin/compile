#!/usr/bin/env bash

# Activate env
for env_var in $(ls $ENV_DIR); do
   export "$env_var=$(cat $ENV_DIR/$env_var)"
done

# Set a database url
export TEST_DB_URL="sqlite:///$BUILD_DIR/test.sqlite3"

if [[ -n "$BUILD_COMMAND" ]]; then
    echo "Running $BUILD_COMMAND..."

    cwd_cache=$PWD
    cd $BUILD_DIR
    echo "Show path"
    echo "$PATH"
    echo "Contents of profile dir"
    ls -lha "$BUILD_DIR/.profile.d/"
    echo "Contents of apt bootstrap"
    echo "Home=$HOME"
    cat $BUILD_DIR/.profile.d/000_apt.sh

    $BUILD_COMMAND
    cd $cwd_cache
fi
