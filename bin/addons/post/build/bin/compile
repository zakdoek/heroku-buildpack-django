#!/usr/bin/env bash

# Activate env
for env_var in $(ls $ENV_DIR); do
   export "$env_var=$(cat $ENV_DIR/$env_var)"
done

# Set a database url
export TEST_DB_URL="sqlite:///$BUILD_DIR/test.sqlite3"

if [[ -n "$BUILD_COMMAND" ]]; then
    echo "Running $BUILD_COMMAND..."

    cwd_cache=$PWD

    home_cache=$HOME
    HOME=$BUILD_DIR
    source $BUILD_DIR/.profile.d/000_apt.sh
    HOME=$home_cache

    echo "PATH"
    echo "$PATH"

    cd $BUILD_DIR
    $BUILD_COMMAND
    cd $cwd_cache
fi
