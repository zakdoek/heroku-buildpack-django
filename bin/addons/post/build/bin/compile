#!/usr/bin/env bash

# Activate env
for env_var in $(ls $ENV_DIR); do
   export "$env_var=$(cat $ENV_DIR/$env_var)"
done

# Set a database url
export TEST_DB_URL="sqlite:///$BUILD_DIR/test.sqlite3"

if [[ -n "$BUILD_COMMAND" ]]; then
    echo "Running $BUILD_COMMAND..."

    cwd_cache=$PWD

    export PATH=$PWD/.apt/usr/bin:$PATH
    echo $PATH
    echo $PWD
    ls -lha $PWD/.apt/usr/bin

    cd $BUILD_DIR
    # $BUILD_COMMAND
    $cwd_cache/.apt/usr/bin/make
    cd $cwd_cache
fi
